<%# views/admin/hotel_accounting.ejs %>

<div id="accounting-page-data" data-hotel-id="<%= hotelId %>"></div>

<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Accounting for <%= hotelName %></h1>

  <div class="bg-white p-4 rounded-lg shadow-md mb-6">
    <h2 class="text-xl font-semibold mb-2">Generate Report</h2>
    <div class="flex items-center space-x-4">
      <div>
        <label for="start-date" class="block text-sm font-medium text-gray-700">Start Date</label>
        <input type="date" id="start-date" name="start-date" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
      </div>
      <div>
        <label for="end-date" class="block text-sm font-medium text-gray-700">End Date</label>
        <input type="date" id="end-date" name="end-date" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
      </div>
      <button id="generate-report-btn" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Generate Report
      </button>
    </div>
  </div>

  <div class="bg-white p-4 rounded-lg shadow-md mb-6">
    <h2 class="text-xl font-semibold mb-2">Summary</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-center">
      <div class="p-4 bg-green-100 rounded-lg">
        <h3 class="text-lg font-medium text-green-800" id="total-income">Total Income: Rp0</h3>
      </div>
      <div class="p-4 bg-red-100 rounded-lg">
        <h3 class="text-lg font-medium text-red-800" id="total-expense">Total Expense: Rp0</h3>
      </div>
      <div class="p-4 bg-blue-100 rounded-lg">
        <h3 class="text-lg font-medium text-blue-800" id="net-profit">Net Profit: Rp0</h3>
      </div>
    </div>
  </div>

  <div class="flex flex-col">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount (Rp)</th>
              </tr>
            </thead>
            <tbody id="entries-tbody" class="bg-white divide-y divide-gray-200">
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>

<script src="/js/accounting.js"></script>
