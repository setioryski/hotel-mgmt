<% title = 'Login' %>
<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded shadow w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Login</h2>
    <form method="POST" action="/api/auth/login" class="space-y-4">
      <div>
        <label for="email" class="block font-medium">Email</label>
        <input type="email" name="email" required class="w-full border px-3 py-2 rounded" />
      </div>
      <div>
        <label for="password" class="block font-medium">Password</label>
        <input type="password" name="password" required class="w-full border px-3 py-2 rounded" />
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Log In</button>
    </form>
    <p class="mt-4 text-sm text-center">
      Don't have an account? <a href="/register" class="text-blue-600 hover:underline">Register</a>
    </p>
  </div>
</div>
